{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AIReviewSettings": {
    "ModelConfiguration": {
      "PrimaryModel": "GPT-4",
      "SecondaryModel": "Claude-3",
      "FallbackModel": "Gemini-Pro",
      "ModelSwitchingEnabled": true,
      "MaxTokensPerRequest": 4096,
      "TemperatureSetting": 0.3
    },
    "ReviewTypes": {
      "CodeReview": {
        "Enabled": true,
        "SupportedLanguages": ["C#", "JavaScript", "TypeScript", "Python", "Java"],
        "MaxFileSize": 50000,
        "ReviewDepth": "Comprehensive",
        "SecurityScanEnabled": true
      },
      "DocumentReview": {
        "Enabled": true,
        "SupportedFormats": ["PDF", "DOCX", "TXT", "MD"],
        "MaxDocumentSize": 10485760,
        "LanguageDetection": true,
        "SentimentAnalysis": true
      },
      "ComplianceReview": {
        "Enabled": true,
        "RegulatoryFrameworks": ["SOX", "GDPR", "HIPAA", "PCI-DSS"],
        "AutoComplianceScoring": true,
        "ComplianceThreshold": 85
      },
      "SecurityReview": {
        "Enabled": true,
        "VulnerabilityScanning": true,
        "ThreatModeling": true,
        "SecurityStandards": ["OWASP", "NIST", "ISO27001"],
        "RiskAssessment": true
      }
    },
    "QualityMetrics": {
      "CodeQuality": {
        "ComplexityThreshold": 10,
        "DuplicationThreshold": 0.05,
        "CoverageThreshold": 80,
        "MaintainabilityIndex": 70
      },
      "ReviewQuality": {
        "AccuracyThreshold": 90,
        "CompletenessThreshold": 85,
        "ConsistencyThreshold": 88,
        "TimelinessThreshold": 95
      }
    }
  },
  "ProcessingSettings": {
    "BatchProcessing": {
      "EnableBatchMode": true,
      "MaxBatchSize": 50,
      "BatchTimeoutMinutes": 30,
      "ParallelProcessingEnabled": true,
      "MaxConcurrentReviews": 10
    },
    "PriorityQueues": {
      "HighPriority": {
        "MaxWaitTimeMinutes": 5,
        "ProcessingTimeoutMinutes": 15,
        "RetryAttempts": 3
      },
      "StandardPriority": {
        "MaxWaitTimeMinutes": 30,
        "ProcessingTimeoutMinutes": 60,
        "RetryAttempts": 2
      },
      "LowPriority": {
        "MaxWaitTimeMinutes": 120,
        "ProcessingTimeoutMinutes": 180,
        "RetryAttempts": 1
      }
    },
    "CachingStrategy": {
      "EnableCaching": true,
      "CacheTTLHours": 24,
      "MaxCacheSize": 1000,
      "CacheCompressionEnabled": true
    }
  },
  "ExternalIntegrations": {
    "AIProviders": {
      "OpenAI": {
        "Enabled": true,
        "ApiVersion": "2024-02-15-preview",
        "MaxRequestsPerMinute": 60,
        "TimeoutSeconds": 120
      },
      "Anthropic": {
        "Enabled": true,
        "ApiVersion": "2023-06-01",
        "MaxRequestsPerMinute": 40,
        "TimeoutSeconds": 90
      },
      "Google": {
        "Enabled": true,
        "ApiVersion": "v1",
        "MaxRequestsPerMinute": 30,
        "TimeoutSeconds": 60
      }
    },
    "CodeRepositories": {
      "GitHub": {
        "Enabled": true,
        "WebhookSupport": true,
        "AutoReviewOnPR": true,
        "BranchProtectionIntegration": true
      },
      "GitLab": {
        "Enabled": true,
        "WebhookSupport": true,
        "AutoReviewOnMR": true,
        "PipelineIntegration": true
      },
      "Azure DevOps": {
        "Enabled": true,
        "WebhookSupport": true,
        "AutoReviewOnPR": true,
        "WorkItemIntegration": true
      }
    },
    "NotificationServices": {
      "Email": {
        "Enabled": true,
        "Templates": ["ReviewComplete", "ReviewFailed", "HighRiskDetected"],
        "BatchNotifications": true
      },
      "Slack": {
        "Enabled": true,
        "Channels": ["#code-review", "#security-alerts", "#compliance"],
        "MentionUsers": true
      },
      "Teams": {
        "Enabled": true,
        "AdaptiveCards": true,
        "ChannelNotifications": true
      }
    }
  },
  "SecuritySettings": {
    "DataProtection": {
      "EncryptionAtRest": true,
      "EncryptionInTransit": true,
      "DataRetentionDays": 90,
      "AnonymizationEnabled": true
    },
    "AccessControl": {
      "RoleBasedAccess": true,
      "RequiredRoles": ["Reviewer", "SecurityAnalyst", "ComplianceOfficer"],
      "SessionTimeoutMinutes": 60,
      "AuditLogging": true
    },
    "ContentFiltering": {
      "PIIDetection": true,
      "SensitiveDataMasking": true,
      "ContentSanitization": true,
      "MalwareScanning": true
    }
  },
  "ReportingAndAnalytics": {
    "Reports": {
      "AutoGenerateReports": true,
      "ReportFormats": ["PDF", "HTML", "JSON", "CSV"],
      "ScheduledReports": true,
      "CustomReportTemplates": true
    },
    "Analytics": {
      "PerformanceMetrics": true,
      "TrendAnalysis": true,
      "PredictiveAnalytics": true,
      "BenchmarkComparisons": true
    },
    "Dashboards": {
      "RealTimeDashboard": true,
      "ExecutiveDashboard": true,
      "TechnicalDashboard": true,
      "ComplianceDashboard": true
    }
  },
  "PerformanceOptimization": {
    "ResourceManagement": {
      "MaxMemoryUsageMB": 2048,
      "MaxCPUUsagePercent": 80,
      "DiskSpaceThresholdGB": 10,
      "AutoScalingEnabled": true
    },
    "LoadBalancing": {
      "EnableLoadBalancing": true,
      "MaxConcurrentRequests": 100,
      "RequestQueueLimit": 500,
      "CircuitBreakerEnabled": true
    },
    "Monitoring": {
      "HealthChecks": true,
      "PerformanceCounters": true,
      "ErrorRateMonitoring": true,
      "LatencyMonitoring": true
    }
  },
  "ComplianceAndAudit": {
    "AuditTrail": {
      "LogAllActivities": true,
      "DetailedLogging": true,
      "TamperProofLogs": true,
      "LogRetentionYears": 7
    },
    "ComplianceReporting": {
      "AutoComplianceReports": true,
      "RegulatorySubmissions": true,
      "ComplianceAlerts": true,
      "ViolationTracking": true
    },
    "DataGovernance": {
      "DataClassification": true,
      "DataLineage": true,
      "DataQuality": true,
      "DataPrivacy": true
    }
  }
}

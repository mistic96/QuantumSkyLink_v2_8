{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "WebGateway": {
    "Cors": {
      "AllowedOrigins": [
        "https://quantumskylink.com",
        "https://app.quantumskylink.com",
        "https://dashboard.quantumskylink.com",
        "http://localhost:3000",
        "http://localhost:3001"
      ],
      "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "AllowedHeaders": ["Content-Type", "Authorization", "X-API-Key", "X-Client-Version"],
      "AllowCredentials": true,
      "MaxAge": 86400
    },
    "RateLimiting": {
      "Enabled": true,
      "GlobalLimits": {
        "RequestsPerMinute": 1000,
        "RequestsPerHour": 10000,
        "RequestsPerDay": 100000
      },
      "TierLimits": {
        "Free": {
          "RequestsPerMinute": 60,
          "RequestsPerHour": 1000,
          "RequestsPerDay": 10000
        },
        "Premium": {
          "RequestsPerMinute": 300,
          "RequestsPerHour": 5000,
          "RequestsPerDay": 50000
        },
        "Enterprise": {
          "RequestsPerMinute": 1000,
          "RequestsPerHour": 20000,
          "RequestsPerDay": 200000
        }
      },
      "BurstLimit": 50,
      "BlockDuration": 300
    },
    "ApiVersioning": {
      "DefaultVersion": "1.0",
      "SupportedVersions": ["1.0"],
      "VersionHeader": "X-API-Version",
      "DeprecationNotice": {
        "Enabled": false,
        "Message": "This API version will be deprecated on {date}"
      }
    },
    "Security": {
      "RequireHttps": true,
      "ApiKeyValidation": {
        "Enabled": true,
        "HeaderName": "X-API-Key",
        "RequiredForPublicEndpoints": false
      },
      "JwtValidation": {
        "Enabled": true,
        "RequireSignedTokens": true,
        "ValidateIssuer": true,
        "ValidateAudience": true,
        "ValidateLifetime": true
      },
      "RequestSizeLimit": "10MB",
      "AllowedFileTypes": [".jpg", ".jpeg", ".png", ".pdf", ".doc", ".docx"],
      "BlockSuspiciousActivity": true
    },
    "Caching": {
      "Enabled": true,
      "DefaultTtl": 300,
      "EndpointCaching": {
        "/api/health": 60,
        "/api/version": 3600,
        "/api/fees/rates": 300,
        "/api/market/prices": 30
      },
      "VaryByHeaders": ["Authorization", "X-API-Key", "Accept-Language"]
    },
    "Monitoring": {
      "EnableRequestLogging": true,
      "EnableResponseLogging": false,
      "EnablePerformanceMetrics": true,
      "LogSlowRequests": true,
      "SlowRequestThreshold": 2000,
      "SampleRate": 0.1,
      "EnableDistributedTracing": true
    },
    "ServiceRouting": {
      "Payments": {
        "BasePath": "/api/payments",
        "ServiceName": "PaymentGatewayService",
        "Timeout": 30000,
        "RetryPolicy": {
          "MaxRetries": 3,
          "BackoffMultiplier": 2
        }
      },
      "Users": {
        "BasePath": "/api/users",
        "ServiceName": "UserService",
        "Timeout": 15000,
        "RetryPolicy": {
          "MaxRetries": 2,
          "BackoffMultiplier": 1.5
        }
      },
      "Accounts": {
        "BasePath": "/api/accounts",
        "ServiceName": "AccountService",
        "Timeout": 20000,
        "RetryPolicy": {
          "MaxRetries": 3,
          "BackoffMultiplier": 2
        }
      },
      "Tokens": {
        "BasePath": "/api/tokens",
        "ServiceName": "TokenService",
        "Timeout": 25000,
        "RetryPolicy": {
          "MaxRetries": 3,
          "BackoffMultiplier": 2
        }
      },
      "Fees": {
        "BasePath": "/api/fees",
        "ServiceName": "FeeService",
        "Timeout": 10000,
        "RetryPolicy": {
          "MaxRetries": 2,
          "BackoffMultiplier": 1.5
        }
      },
      "Marketplace": {
        "BasePath": "/api/marketplace",
        "ServiceName": "MarketplaceService",
        "Timeout": 30000,
        "RetryPolicy": {
          "MaxRetries": 3,
          "BackoffMultiplier": 2
        }
      },
      "Notifications": {
        "BasePath": "/api/notifications",
        "ServiceName": "NotificationService",
        "Timeout": 15000,
        "RetryPolicy": {
          "MaxRetries": 2,
          "BackoffMultiplier": 1.5
        }
      }
    },
    "ResponseTransformation": {
      "EnableCompression": true,
      "CompressionLevel": "Optimal",
      "MinimumCompressionSize": 1024,
      "StandardizeErrorResponses": true,
      "IncludeRequestId": true,
      "IncludeTimestamp": true
    },
    "Documentation": {
      "EnableSwagger": true,
      "SwaggerEndpoint": "/swagger",
      "Title": "QuantumSkyLink Public API",
      "Description": "Public API for QuantumSkyLink platform",
      "Version": "v1.0",
      "ContactEmail": "api-support@quantumskylink.com"
    }
  }
}

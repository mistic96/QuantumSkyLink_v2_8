{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Logto": {
    "Endpoint": "https://5r5a7r.logto.app/",
    "AppId": "x2hahupyfegqib04tmq8m",
    "Audience": "https://dev.api.quantumskylink.com"
  },
  "Jwt": {
    "Issuer": "https://5r5a7r.logto.app/oidc",
    "Audience": "https://dev.api.quantumskylink.com",
    "RequireHttpsMetadata": true,
    "ClockSkewMinutes": 5,
    "ValidateAudience": true
  },
  "ServiceUrls": {
    "UserService": "http://localhost:5237"
  },
  "MobileGateway": {
    "MobileOptimization": {
      "EnableCompression": true,
      "CompressionLevel": "Fastest",
      "MinimumCompressionSize": 512,
      "EnableResponseCaching": true,
      "DefaultCacheDuration": 300,
      "EnableDataMinification": true,
      "MaxResponseSize": "5MB"
    },
    "PushNotifications": {
      "Enabled": true,
      "Providers": {
        "Firebase": {
          "Enabled": true,
          "ServerKey": "",
          "SenderId": "",
          "ProjectId": "quantumskylink-mobile"
        },
        "APNS": {
          "Enabled": true,
          "CertificatePath": "",
          "CertificatePassword": "",
          "Environment": "Development"
        }
      },
      "NotificationTypes": {
        "TransactionAlerts": true,
        "PriceAlerts": true,
        "SecurityAlerts": true,
        "SystemUpdates": true,
        "MarketingMessages": false
      },
      "DeliverySettings": {
        "RetryAttempts": 3,
        "RetryDelay": 5000,
        "BatchSize": 100,
        "QueueTimeout": 30000
      }
    },
    "OfflineSync": {
      "Enabled": true,
      "SyncInterval": 300,
      "MaxOfflineTime": 86400,
      "ConflictResolution": "ServerWins",
      "SyncEndpoints": [
        "/mobile/sync/transactions",
        "/mobile/sync/balances",
        "/mobile/sync/notifications",
        "/mobile/sync/preferences"
      ],
      "CacheSettings": {
        "MaxCacheSize": "50MB",
        "CacheExpiry": 3600,
        "PriorityData": ["balances", "transactions", "security"]
      }
    },
    "Authentication": {
      "BiometricAuth": {
        "Enabled": true,
        "SupportedTypes": ["Fingerprint", "FaceID", "TouchID"],
        "FallbackToPin": true,
        "MaxFailedAttempts": 5,
        "LockoutDuration": 300
      },
      "SessionManagement": {
        "SessionTimeout": 1800,
        "ExtendOnActivity": true,
        "MaxConcurrentSessions": 3,
        "RequireReauth": ["payments", "settings", "security"]
      },
      "DeviceBinding": {
        "Enabled": true,
        "MaxDevicesPerUser": 5,
        "DeviceRegistrationRequired": true,
        "TrustNewDevices": false
      }
    },
    "Security": {
      "AppSecurity": {
        "EnableAppPinning": true,
        "EnableRootDetection": true,
        "EnableDebugDetection": true,
        "EnableScreenshotBlocking": true,
        "EnableJailbreakDetection": true
      },
      "DataProtection": {
        "EncryptLocalStorage": true,
        "EncryptionAlgorithm": "AES256",
        "SecureKeyStorage": true,
        "WipeDataOnTamper": true
      },
      "NetworkSecurity": {
        "RequireSSL": true,
        "CertificatePinning": true,
        "AllowedCertificates": [],
        "BlockProxyConnections": true
      }
    },
    "Performance": {
      "RequestOptimization": {
        "EnableRequestBatching": true,
        "BatchTimeout": 100,
        "MaxBatchSize": 10,
        "EnableRequestDeduplication": true
      },
      "ImageOptimization": {
        "EnableImageCompression": true,
        "MaxImageSize": "2MB",
        "SupportedFormats": ["JPEG", "PNG", "WebP"],
        "QualitySettings": {
          "Thumbnail": 60,
          "Standard": 80,
          "HighQuality": 95
        }
      },
      "BandwidthOptimization": {
        "EnableAdaptiveQuality": true,
        "LowBandwidthMode": {
          "Threshold": "1Mbps",
          "ReduceImageQuality": true,
          "DisableAnimations": true,
          "MinifyResponses": true
        }
      }
    },
    "ServiceRouting": {
      "Payments": {
        "BasePath": "/mobile/payments",
        "ServiceName": "PaymentGatewayService",
        "Timeout": 30000,
        "EnableOfflineQueue": true,
        "RetryPolicy": {
          "MaxRetries": 3,
          "BackoffMultiplier": 2
        }
      },
      "Users": {
        "BasePath": "/mobile/users",
        "ServiceName": "UserService",
        "Timeout": 15000,
        "EnableOfflineQueue": false,
        "RetryPolicy": {
          "MaxRetries": 2,
          "BackoffMultiplier": 1.5
        }
      },
      "Accounts": {
        "BasePath": "/mobile/accounts",
        "ServiceName": "AccountService",
        "Timeout": 20000,
        "EnableOfflineQueue": true,
        "RetryPolicy": {
          "MaxRetries": 3,
          "BackoffMultiplier": 2
        }
      },
      "Tokens": {
        "BasePath": "/mobile/tokens",
        "ServiceName": "TokenService",
        "Timeout": 25000,
        "EnableOfflineQueue": true,
        "RetryPolicy": {
          "MaxRetries": 3,
          "BackoffMultiplier": 2
        }
      },
      "Notifications": {
        "BasePath": "/mobile/notifications",
        "ServiceName": "NotificationService",
        "Timeout": 10000,
        "EnableOfflineQueue": false,
        "RetryPolicy": {
          "MaxRetries": 2,
          "BackoffMultiplier": 1.5
        }
      },
      "Marketplace": {
        "BasePath": "/mobile/marketplace",
        "ServiceName": "MarketplaceService",
        "Timeout": 30000,
        "EnableOfflineQueue": true,
        "RetryPolicy": {
          "MaxRetries": 3,
          "BackoffMultiplier": 2
        }
      }
    },
    "Features": {
      "QRCodeScanning": {
        "Enabled": true,
        "SupportedFormats": ["QR", "DataMatrix", "Code128"],
        "MaxScanTime": 30,
        "EnableTorch": true
      },
      "Geolocation": {
        "Enabled": true,
        "RequirePermission": true,
        "AccuracyLevel": "High",
        "EnableBackground": false
      },
      "Camera": {
        "Enabled": true,
        "MaxPhotoSize": "5MB",
        "SupportedResolutions": ["720p", "1080p", "4K"],
        "EnableVideoRecording": false
      },
      "Contacts": {
        "Enabled": true,
        "RequirePermission": true,
        "EnableSync": false,
        "MaxContacts": 1000
      }
    },
    "Analytics": {
      "Enabled": true,
      "TrackUserBehavior": true,
      "TrackPerformance": true,
      "TrackCrashes": true,
      "DataRetention": 90,
      "AnonymizeData": true,
      "SampleRate": 0.1
    },
    "Updates": {
      "AutoUpdate": {
        "Enabled": true,
        "CheckInterval": 86400,
        "RequireWiFi": true,
        "AllowBackground": true
      },
      "ForceUpdate": {
        "Enabled": true,
        "MinimumVersion": "1.0.0",
        "GracePeriod": 604800
      }
    }
  }
}

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AdminGateway": {
    "Security": {
      "RequireHttps": true,
      "RequireAuthentication": true,
      "AllowedRoles": ["Admin", "SuperAdmin", "SystemAdmin"],
      "SessionTimeout": 30,
      "MaxConcurrentSessions": 5,
      "RequireTwoFactorAuth": true,
      "IpWhitelist": [],
      "BlockSuspiciousActivity": true
    },
    "AuditLogging": {
      "Enabled": true,
      "LogAllRequests": true,
      "LogResponseBodies": false,
      "RetentionDays": 90,
      "LogSensitiveData": false,
      "AuditDatabase": "AdminAuditLogs",
      "RealTimeAlerts": true
    },
    "RateLimiting": {
      "Enabled": true,
      "RequestsPerMinute": 100,
      "RequestsPerHour": 1000,
      "BurstLimit": 20,
      "BlockDuration": 300,
      "WhitelistedIPs": []
    },
    "AdminPanel": {
      "BasePath": "/admin",
      "DashboardPath": "/admin/dashboard",
      "UserManagementPath": "/admin/users",
      "SystemMonitoringPath": "/admin/monitoring",
      "ConfigurationPath": "/admin/config",
      "AuditLogsPath": "/admin/audit",
      "EnableSystemMetrics": true,
      "EnableUserActivity": true,
      "EnableServiceHealth": true
    },
    "ServiceRouting": {
      "PaymentGateway": {
        "BasePath": "/admin/payments",
        "RequiredRole": "Admin",
        "EnableAudit": true
      },
      "UserManagement": {
        "BasePath": "/admin/users",
        "RequiredRole": "Admin",
        "EnableAudit": true
      },
      "Compliance": {
        "BasePath": "/admin/compliance",
        "RequiredRole": "SuperAdmin",
        "EnableAudit": true
      },
      "SystemConfiguration": {
        "BasePath": "/admin/system",
        "RequiredRole": "SystemAdmin",
        "EnableAudit": true
      },
      "Governance": {
        "BasePath": "/admin/governance",
        "RequiredRole": "SuperAdmin",
        "EnableAudit": true
      }
    },
    "Monitoring": {
      "EnableHealthChecks": true,
      "EnableMetrics": true,
      "EnableTracing": true,
      "AlertThresholds": {
        "ResponseTimeMs": 5000,
        "ErrorRate": 0.05,
        "MemoryUsageMB": 1024,
        "CpuUsagePercent": 80
      },
      "NotificationChannels": {
        "Email": true,
        "Slack": false,
        "SMS": true
      }
    },
    "Backup": {
      "EnableAutomaticBackup": true,
      "BackupInterval": "Daily",
      "RetentionDays": 30,
      "BackupLocation": "AdminBackups",
      "EncryptBackups": true
    }
  }
}

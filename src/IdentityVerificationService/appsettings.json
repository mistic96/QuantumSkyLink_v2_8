{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityVerificationSettings": {
    "VerificationMethods": {
      "DocumentVerification": {
        "Enabled": true,
        "SupportedDocuments": ["Passport", "DriverLicense", "NationalID", "ResidencePermit"],
        "RequiredDocuments": 2,
        "ExpiryCheckEnabled": true,
        "QualityThreshold": 85
      },
      "BiometricVerification": {
        "Enabled": true,
        "FacialRecognition": true,
        "FingerprintScanning": false,
        "LivenessDetection": true,
        "MatchingThreshold": 90
      },
      "AddressVerification": {
        "Enabled": true,
        "RequiredProofs": ["UtilityBill", "BankStatement", "TaxDocument"],
        "MaxDocumentAge": 90,
        "CrossReferenceEnabled": true
      },
      "PhoneVerification": {
        "Enabled": true,
        "SMSVerification": true,
        "VoiceVerification": true,
        "OTPLength": 6,
        "OTPExpiryMinutes": 10
      }
    },
    "RiskAssessment": {
      "EnableRiskScoring": true,
      "LowRiskThreshold": 30,
      "MediumRiskThreshold": 70,
      "HighRiskThreshold": 90,
      "AutoRejectHighRisk": false,
      "ManualReviewRequired": true
    },
    "ComplianceChecks": {
      "AMLScreening": {
        "Enabled": true,
        "WatchlistSources": ["OFAC", "UN", "EU", "PEP"],
        "MatchingTolerance": 85,
        "OngoingMonitoring": true
      },
      "SanctionsScreening": {
        "Enabled": true,
        "RealTimeChecking": true,
        "PeriodicRescreening": true,
        "RescreeningIntervalDays": 30
      },
      "PEPScreening": {
        "Enabled": true,
        "IncludeFamilyMembers": true,
        "IncludeAssociates": true,
        "RiskCategories": ["High", "Medium", "Low"]
      }
    },
    "ProcessingWorkflow": {
      "AutoProcessing": {
        "EnableAutoApproval": true,
        "AutoApprovalThreshold": 95,
        "RequireManualReview": false,
        "MaxProcessingTimeMinutes": 30
      },
      "ManualReview": {
        "RequiredForHighRisk": true,
        "RequiredForIncompleteData": true,
        "ReviewerAssignment": "RoundRobin",
        "MaxReviewTimeHours": 24
      },
      "Appeals": {
        "AllowAppeals": true,
        "AppealTimeframeDays": 30,
        "RequireAdditionalDocuments": true,
        "EscalationEnabled": true
      }
    }
  },
  "ExternalIntegrations": {
    "DocumentVerificationProviders": {
      "Jumio": {
        "Enabled": true,
        "ApiVersion": "v1",
        "TimeoutSeconds": 60,
        "RetryAttempts": 3,
        "SupportedRegions": ["US", "EU", "APAC"]
      },
      "Onfido": {
        "Enabled": true,
        "ApiVersion": "v3.6",
        "TimeoutSeconds": 45,
        "RetryAttempts": 2,
        "SupportedRegions": ["Global"]
      },
      "Veriff": {
        "Enabled": false,
        "ApiVersion": "v1",
        "TimeoutSeconds": 30,
        "RetryAttempts": 2
      }
    },
    "BiometricProviders": {
      "FaceID": {
        "Enabled": true,
        "Provider": "AWS Rekognition",
        "ConfidenceThreshold": 90,
        "LivenessRequired": true
      },
      "VoiceID": {
        "Enabled": false,
        "Provider": "Azure Cognitive Services",
        "ConfidenceThreshold": 85
      }
    },
    "DataSources": {
      "CreditBureaus": {
        "Experian": {
          "Enabled": true,
          "Services": ["Identity", "Address", "Phone"],
          "TimeoutSeconds": 30
        },
        "Equifax": {
          "Enabled": true,
          "Services": ["Identity", "Address"],
          "TimeoutSeconds": 30
        }
      },
      "GovernmentDatabases": {
        "OFAC": {
          "Enabled": true,
          "UpdateFrequency": "Daily",
          "AutoSync": true
        },
        "PEPDatabase": {
          "Enabled": true,
          "UpdateFrequency": "Weekly",
          "AutoSync": true
        }
      }
    },
    "NotificationServices": {
      "Email": {
        "Enabled": true,
        "Templates": ["VerificationComplete", "VerificationFailed", "DocumentsRequired"],
        "SendFromAddress": "noreply@quantumskylink.com"
      },
      "SMS": {
        "Enabled": true,
        "Provider": "Twilio",
        "Templates": ["OTPCode", "StatusUpdate"],
        "InternationalEnabled": true
      }
    }
  },
  "SecuritySettings": {
    "DataProtection": {
      "EncryptionAtRest": true,
      "EncryptionInTransit": true,
      "KeyRotationDays": 90,
      "DataRetentionDays": 2555,
      "SecureDataDeletion": true
    },
    "AccessControl": {
      "RoleBasedAccess": true,
      "RequiredRoles": ["VerificationOfficer", "ComplianceOfficer", "RiskAnalyst"],
      "SessionTimeoutMinutes": 30,
      "MultiFactorRequired": true
    },
    "AuditLogging": {
      "LogAllActivities": true,
      "IncludeSensitiveData": false,
      "RetentionPeriodYears": 7,
      "RealTimeMonitoring": true
    },
    "FraudPrevention": {
      "DeviceFingerprintingEnabled": true,
      "IPGeolocationChecking": true,
      "VelocityChecking": true,
      "SuspiciousActivityDetection": true
    }
  },
  "QualityAssurance": {
    "DocumentQuality": {
      "MinimumResolution": "1080p",
      "BlurDetection": true,
      "GlareDetection": true,
      "CompletenessCheck": true,
      "AuthenticityVerification": true
    },
    "DataAccuracy": {
      "CrossReferenceChecking": true,
      "ConsistencyValidation": true,
      "FormatValidation": true,
      "DuplicateDetection": true
    },
    "ProcessQuality": {
      "QualityScoreThreshold": 85,
      "RandomQualityChecks": true,
      "QualityCheckPercentage": 10,
      "ContinuousImprovement": true
    }
  },
  "ReportingAndAnalytics": {
    "OperationalReports": {
      "DailyProcessingReport": true,
      "WeeklyQualityReport": true,
      "MonthlyComplianceReport": true,
      "QuarterlyTrendAnalysis": true
    },
    "ComplianceReporting": {
      "RegulatoryReports": true,
      "AuditTrailReports": true,
      "SuspiciousActivityReports": true,
      "DataBreachReports": true
    },
    "PerformanceMetrics": {
      "ProcessingTimeTracking": true,
      "AccuracyMeasurement": true,
      "CustomerSatisfactionTracking": true,
      "CostPerVerification": true
    }
  },
  "CustomerExperience": {
    "UserInterface": {
      "MultiLanguageSupport": true,
      "SupportedLanguages": ["en", "es", "fr", "de", "ja", "ko", "zh"],
      "MobileOptimized": true,
      "AccessibilityCompliant": true
    },
    "ProcessFlow": {
      "GuidedVerification": true,
      "ProgressIndicators": true,
      "HelpAndSupport": true,
      "LiveChatSupport": true
    },
    "Communication": {
      "StatusUpdates": true,
      "EstimatedCompletionTime": true,
      "ProactiveNotifications": true,
      "MultiChannelSupport": true
    }
  },
  "PerformanceOptimization": {
    "Processing": {
      "ParallelProcessingEnabled": true,
      "MaxConcurrentVerifications": 100,
      "QueueManagement": true,
      "LoadBalancing": true
    },
    "Caching": {
      "ResultCaching": true,
      "CacheTTLHours": 24,
      "DocumentCaching": false,
      "MetadataCaching": true
    },
    "Monitoring": {
      "RealTimeMonitoring": true,
      "PerformanceAlerts": true,
      "CapacityPlanning": true,
      "SLAMonitoring": true
    }
  },
  "BusinessRules": {
    "VerificationLevels": {
      "Basic": {
        "RequiredChecks": ["DocumentVerification", "PhoneVerification"],
        "ProcessingTime": "Immediate",
        "ValidityPeriod": 365
      },
      "Enhanced": {
        "RequiredChecks": ["DocumentVerification", "BiometricVerification", "AddressVerification"],
        "ProcessingTime": "1-2 hours",
        "ValidityPeriod": 730
      },
      "Premium": {
        "RequiredChecks": ["DocumentVerification", "BiometricVerification", "AddressVerification", "AMLScreening"],
        "ProcessingTime": "24-48 hours",
        "ValidityPeriod": 1095
      }
    },
    "RegionalCompliance": {
      "GDPR": {
        "Enabled": true,
        "DataMinimization": true,
        "ConsentManagement": true,
        "RightToErasure": true
      },
      "CCPA": {
        "Enabled": true,
        "DataTransparency": true,
        "OptOutRights": true
      },
      "KYC": {
        "Enabled": true,
        "RiskBasedApproach": true,
        "OngoingMonitoring": true,
        "RecordKeeping": true
      }
    }
  }
}

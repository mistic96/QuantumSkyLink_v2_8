{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=LiquidationServiceDb;Username=postgres;Password=postgres;Port=5432",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForLiquidationService2024!",
    "Issuer": "LiquidationService",
    "Audience": "LiquidationServiceUsers",
    "ExpirationInMinutes": 60
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:5000",
    "https://localhost:5001"
  ],
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/liquidation-service-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "Hangfire": {
    "DashboardTitle": "LiquidationService Jobs",
    "WorkerCount": 5,
    "Queues": [ "default", "liquidation", "compliance", "pricing" ]
  },
  "Redis": {
    "InstanceName": "LiquidationService",
    "DefaultExpiration": "01:00:00"
  },
  "LiquidationSettings": {
    "MaxConcurrentLiquidations": 10,
    "DefaultTimeoutMinutes": 30,
    "RetryAttempts": 3,
    "ComplianceCheckRequired": true,
    "PriceValidityMinutes": 5
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}

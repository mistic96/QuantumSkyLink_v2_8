{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "TreasuryManagement": {
    "LiquiditySettings": {
      "MinimumReserveRatio": 0.15,
      "OptimalReserveRatio": 0.25,
      "MaximumReserveRatio": 0.40,
      "RebalanceThresholdPercent": 5.0,
      "AutoRebalanceEnabled": true
    },
    "RiskManagement": {
      "MaxSingleAssetExposure": 0.30,
      "MaxCounterpartyExposure": 0.20,
      "VaRThreshold": 0.05,
      "StressTestFrequencyDays": 7,
      "RiskLimitsEnabled": true
    },
    "AssetAllocation": {
      "CashTargetPercent": 20.0,
      "StablecoinTargetPercent": 40.0,
      "CryptocurrencyTargetPercent": 30.0,
      "TraditionalAssetsTargetPercent": 10.0,
      "RebalanceTolerancePercent": 5.0
    },
    "YieldOptimization": {
      "MinimumYieldThreshold": 0.02,
      "MaximumRiskScore": 7,
      "PreferredProtocols": ["Aave", "Compound", "Uniswap"],
      "AutoCompoundingEnabled": true,
      "HarvestFrequencyHours": 24
    }
  },
  "TradingSettings": {
    "ExecutionLimits": {
      "MaxTradeSize": 1000000.00,
      "MaxDailyVolume": 10000000.00,
      "SlippageTolerance": 0.005,
      "MaxPriceImpact": 0.02
    },
    "OrderManagement": {
      "DefaultOrderType": "Limit",
      "TimeInForceDefault": "GTC",
      "PartialFillsAllowed": true,
      "MinOrderSize": 100.00
    },
    "MarketMaking": {
      "SpreadTargetBps": 10,
      "InventoryLimits": 500000.00,
      "QuoteRefreshSeconds": 5,
      "EnableMarketMaking": true
    }
  },
  "ComplianceSettings": {
    "ReportingRequirements": {
      "DailyReportsEnabled": true,
      "WeeklyReportsEnabled": true,
      "MonthlyReportsEnabled": true,
      "RegulatoryReportingEnabled": true
    },
    "AuditTrail": {
      "LogAllTransactions": true,
      "RetentionPeriodYears": 7,
      "EncryptSensitiveData": true,
      "ImmutableLogging": true
    },
    "Limits": {
      "MaxSingleTransactionAmount": 5000000.00,
      "DailyTransactionLimit": 50000000.00,
      "RequireApprovalAbove": 1000000.00,
      "MultiSignatureRequired": true
    }
  },
  "ExternalIntegrations": {
    "PriceFeeds": {
      "PrimaryProvider": "Chainlink",
      "SecondaryProvider": "CoinGecko",
      "UpdateFrequencySeconds": 30,
      "PriceDeviationThreshold": 0.02
    },
    "Exchanges": {
      "PreferredExchanges": ["Binance", "Coinbase", "Kraken"],
      "APIRateLimits": {
        "RequestsPerSecond": 10,
        "BurstLimit": 50
      },
      "ConnectionTimeoutSeconds": 30
    },
    "Custodians": {
      "PrimaryCustodian": "Fireblocks",
      "BackupCustodian": "BitGo",
      "MultiSigThreshold": 3,
      "RequiredSigners": 5
    }
  },
  "PerformanceMetrics": {
    "Benchmarks": {
      "TargetROI": 0.08,
      "MaxDrawdown": 0.15,
      "SharpeRatioTarget": 1.5,
      "VolatilityTarget": 0.20
    },
    "Monitoring": {
      "PerformanceUpdateFrequency": "Hourly",
      "AlertThresholds": {
        "DrawdownAlert": 0.10,
        "VolatilityAlert": 0.25,
        "LiquidityAlert": 0.10
      }
    }
  },
  "Security": {
    "MultiSignature": {
      "RequiredSignatures": 3,
      "TotalSigners": 5,
      "TimeoutHours": 24
    },
    "AccessControl": {
      "TradingPermissions": ["TreasuryManager", "RiskManager"],
      "ViewOnlyPermissions": ["Auditor", "Compliance"],
      "AdminPermissions": ["TreasuryHead"]
    }
  }
}

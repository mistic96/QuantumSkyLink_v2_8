{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AccountManagement": {
    "KycSettings": {
      "RequiredDocuments": ["Identity", "ProofOfAddress", "ProofOfIncome"],
      "AutoApprovalThreshold": 1000.00,
      "ManualReviewThreshold": 10000.00,
      "DocumentExpiryDays": 365
    },
    "AccountLimits": {
      "DailyTransactionLimit": 50000.00,
      "MonthlyTransactionLimit": 500000.00,
      "MaxAccountsPerUser": 5,
      "MinimumAccountBalance": 0.01
    },
    "ComplianceSettings": {
      "AmlCheckRequired": true,
      "SanctionsScreening": true,
      "PepScreening": true,
      "RiskAssessmentRequired": true
    },
    "AccountTypes": {
      "Individual": {
        "MinAge": 18,
        "MaxAge": 120,
        "RequiredVerificationLevel": "Basic"
      },
      "Business": {
        "RequiredDocuments": ["BusinessRegistration", "TaxId", "AuthorizedSignatory"],
        "RequiredVerificationLevel": "Enhanced"
      },
      "Institutional": {
        "RequiredDocuments": ["CorporateRegistration", "BoardResolution", "BeneficialOwnership"],
        "RequiredVerificationLevel": "Premium"
      }
    }
  },
  "ExternalServices": {
    "UserService": {
      "BaseUrl": "https+http://userservice",
      "TimeoutSeconds": 30
    },
    "InfrastructureService": {
      "BaseUrl": "https+http://infrastructureservice",
      "TimeoutSeconds": 30
    }
  },
  "Security": {
    "EncryptionSettings": {
      "Algorithm": "AES256",
      "KeyRotationDays": 90
    },
    "SessionSettings": {
      "TimeoutMinutes": 30,
      "MaxConcurrentSessions": 3
    }
  }
}
